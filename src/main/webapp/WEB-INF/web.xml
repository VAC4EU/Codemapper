<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

  <display-name>ADVANCE Code Mapper</display-name>
  
  <servlet>
    <servlet-name>nl.erasmusmc.mieur.biosemantics.advance.codemapper.rest.CodeMapperApplication</servlet-name>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <session-config>
    <session-timeout>525600</session-timeout>
    <cookie-config>
      <max-age>31536000</max-age>
    </cookie-config>
  </session-config>
  
  <filter>
    <filter-name>noCache</filter-name>
    <filter-class>com.samaxes.filter.NoCacheFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>noCache</filter-name>
    <url-pattern>/index.html</url-pattern>
    <url-pattern>/style.css</url-pattern>
    <url-pattern>/js/*</url-pattern>
    <url-pattern>/partials/*</url-pattern>
  </filter-mapping>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>CoMap</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <filter>
    <filter-name>cors</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>cors</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <context-param>
    <param-name>log4j.appender.FILE.File</param-name>
    <param-value>../logs/codemapper.log</param-value>
  </context-param>
  <context-param>
    <param-name>log4j.appender.FILE.layout.conversionPattern</param-name>
    <param-value>%d{ISO8601} %-5p - %m%n</param-value>
  </context-param>
  <context-param>
    <param-name>log4j.rootLogger</param-name>
    <param-value>DEBUG</param-value>
  </context-param>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
