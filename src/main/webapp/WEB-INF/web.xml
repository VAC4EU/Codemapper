	<context-param>
		<param-name>utf-username</param-name>
		<param-value>biosemantics</param-value>
	</context-param>
	<context-param>
		<param-name>utf-password</param-name>
		<param-value>Mieur2100</param-value>
	</context-param>
	<context-param>
		<param-name>utf-version</param-name>
		<param-value>2014AA</param-value>
	</context-param>
  <context-param>
    <param-name>utf-service-name</param-name>
    <param-value>http://umlsks.nlm.nih.gov</param-value>
  </context-param>
  
	<context-param>
		<param-name>log4j.appender.FILE.File</param-name>
		<param-value>../logs/codemapper.log</param-value>
	</context-param>
	<context-param>
		<param-name>log4j.appender.FILE.layout.conversionPattern</param-name>
		<param-value>%d{ISO8601} %-5p - %m%n</param-value>
	</context-param>
	<context-param>
