    </param-value>
  </context-param>
  
  <context-param>
    <param-name>vocabularies-with-definition</param-name>
    <param-value>
      MEDLINEPLUS,NCI,CCC,CHV,HL7V3.0
    </param-value>
  </context-param>
  
  <context-param>
    <param-name>umls-db-uri</param-name>
    <param-value>jdbc:mysql://mi-bios1/umls2014aa</param-value>
  </context-param>
  
  <context-param>
    <param-name>umls-db-username</param-name>
    <param-value>root</param-value>
  </context-param>
  
  <context-param>
    <param-name>umls-db-password</param-name>
    <param-value></param-value>
